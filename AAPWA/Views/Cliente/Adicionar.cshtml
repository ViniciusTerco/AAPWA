@model AAPWA.ViewsModel.Cliente.AdicionarViewModel
@{
    ViewData["Title"] = "Adicionar";
}

<h2>Adicionar Clientes</h2>
<hr/>
<a href="/">Voltar</a>
<hr/>

@if (@Model.FormMensagensErro != null) {
    <ul>
        @foreach (var msgErro in @Model.FormMensagensErro) {
            <li>@msgErro</li>
        }
    </ul>
}
<form action="/Cliente/Adicionar" method="post">
    <div>
        <label for="tipo">Tipo</label>
        <input id="tipo" name="tipo" type="text">
    </div>

    <div>
        <label for="documento">Documento</label>
        <input id="documento" name="documento" type="text">
    </div>

    <div>
        <label for="dataNascimento">Data Nascimento</label>
        <input id="dataNascimento" name="dataNascimento" type="date">
    </div>

    <div>
        <label for="nome">Nome</label>
        <input id="nome" name="nome" type="text">
    </div>

    <div>
        <label for="endereco">Endereço</label>
        <input id="endereco" name="endereco" type="text">
    </div>
    
    <div>
        <label for="observacao">Observação</label>
        <input id="observacao" name="observacao" type="text">
    </div>
    
    <div>
        <label for="dataInclusao">Data Inclusão</label>
        <input id="dataInclusao" name="dataInclusao" type="date">
    </div>
        
    <div>
        <label for="dataModificacao">Data Modificação</label>
        <input id="dataModificacao" name="dataModificacao" type="date">
    </div>
        
    <div>
        <label for="evento">Evento</label>
        <input id="evento" name="evento" type="text">
    </div>
        
    <div>
        <label for="email">Email</label>
        <input id="email" name="email" type="text">
    </div>
        
    <div>
        <input name="confirmar" type="submit" value="Confirmar">
    </div>
</form>