@model AAPWA.ViewsModel.Evento.AdicionarViewModel
@{
    ViewData["Title"] = "Adicionar";
}

<h2>Adicionar Evento</h2>
<hr/>
<a href="/">Voltar</a>
<hr/>

@if (@Model.FormMensagensErro != null) {
    <ul>
        @foreach (var msgErro in @Model.FormMensagensErro) {
            <li>@msgErro</li>
        }
    </ul>
}

<form action="/Evento/Adicionar" method="post">
    <div>
        <label for="tipo">Tipo</label>
        <input id="tipo" name="tipo" type="text">
    </div>

    <div>
        <label for="descricao">Descrição</label>
        <input id="descricao" name="descricao" type="date">
    </div>

    <div>
        <label for="dataInicio">Data Inicio</label>
        <input id="dataInicio" name="dataInicio" type="date">
    </div>

    <div>
        <label for="dataFim">Data Fim</label>
        <input id="dataFim" name="dataFim" type="date">
    </div>

    <div>
        <label for="situacao">Situação</label>
        <input id="situacao" name="situacao" type="text">
    </div>
    
    <div>
        <label for="horaInicial">Hora Inicial</label>
        <input id="horaInicial" name="horaInicial" type="text">
    </div>
    
    <div>
        <label for="horaFinal">Hora Final</label>
        <input id="horaFinal" name="horaFinal" type="text">
    </div>
        
    <div>
        <label for="discricaoLocal">Discrição Local</label>
        <input id="discricaoLocal" name="discricaoLocal" type="text">
    </div>
        
    <div>
        <label for="endereco">Endereço</label>
        <input id="endereco" name="endereco" type="text">
    </div>
    
    <div>
        <label for="observacao">Observação</label>
        <input id="observacao" name="observacao" type="text">
    </div>
    
    <div>
        <label for="dataInclusao">Data Inclusão</label>
        <input id="dataInclusao" name="dataInclusao" type="date">
    </div>
    
    <div>
        <label for="dataModificacao">Data Modificação</label>
        <input id="dataModificacao" name="dataModificacao" type="date">
    </div>
    

    <div>
        <input name="confirmar" type="submit" value="Confirmar">
    </div>
</form>