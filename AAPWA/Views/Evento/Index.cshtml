@using AAPWA.ViewsModel.Evento
@model AAPWA.ViewsModel.Evento.IndexViewModel

@{
    ViewData["Title"] = "Evento";
}

@if (@Model.MensagemSucesso != null) {
    <p><em>@Model.MensagemSucesso</em></p>
}

@if (@Model.MensagemErro != null) {
    <p><em>@Model.MensagemErro</em></p>
}

<a href="/Evento/Adicionar">Adicionar</a>
<table>
    <thead>
    <tr>
        <th>ID</th>
        <th>Tipo</th>
        <th>Descricao</th>
        <th>Data Inicio</th>
        <th>Data Fim</th>
        <th>Hora Inicial</th>
        <th>Hora Final</th>
        <th>Situação</th>
        <th>Descrição Local</th>
        <th>Observação</th>
        <th>Data Inclusão</th>
        <th>Data Modificação</th>
    </tr>
    </thead>
    <tbody>
    
    @foreach (Evento evento in @Model.evento)
    {
        <tr>
            <td>@evento.id</td>
            <td>@evento.tipo</td>
            <td>@evento.dataInicio</td>
            <td>@evento.dataFim</td>
            <td>@evento.horaInicial</td>
            <td>@evento.horaFinal</td>
            <td>@evento.situacao</td>
            <td>@evento.descricaoLocal</td>
            <td>@evento.endereco</td>
            <td>@evento.observacao</td>
            <td>@evento.dataInclusao</td>
            <td>@evento.dataModificacao</td>
            <td>
                <a href="/Evento/Editar/@evento.id">Editar</a>
                <a href="/Evento/Remover/@evento.id">Remover</a>
            </td>
        </tr>
    }
    </tbody>
</table>